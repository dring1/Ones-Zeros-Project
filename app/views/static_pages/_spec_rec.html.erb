<br/>
<% if not @list_spec.empty? %>
<h3>System Recommendations for  <%= "#{@tag_name}" %> </h3>
<table class="table contrast-font">
<tr>

	<th>Article name</th>
	<th>Recommendation Score</th>
		<th>Submit Date</th>

</tr>
<div id="spec-rec-data">
	<% @list_spec.each do |article,score| %>
	<tr>
	<td> <%= link_to "#{article.name}", article %></td>
	<td><%= score %></td>
		<td><%= article.created_at %> </td>

	</tr>
	<% end %>
</div>


</table>
<% else %>
<h3>No Results Found</h3>
<a id="anchor"></a>
<% end	%>
